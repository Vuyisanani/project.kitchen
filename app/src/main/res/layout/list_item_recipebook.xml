<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/card_vertical_separation"
    android:layout_marginRight="@dimen/card_horizontal_margin"
    android:layout_marginLeft="@dimen/card_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:contentPaddingBottom="@dimen/card_vertical_padding">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_recipebook_image_0"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_thumbnail_height_single"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/list_recipebook_image_1"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/placeholder"
            tools:visibility="gone"
             />

        <ImageView
            android:id="@+id/list_recipebook_image_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_thumbnail_height_single"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toRightOf="@+id/list_recipebook_image_0"
            app:layout_constraintRight_toLeftOf="@+id/list_recipebook_image_2"
            app:layout_constraintTop_toTopOf="@+id/list_recipebook_image_0"
            tools:src="@drawable/placeholder2"
            tools:visibility="gone"/>

        <ImageView
            android:id="@+id/list_recipebook_image_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_thumbnail_height_single"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toRightOf="@+id/list_recipebook_image_1"
            app:layout_constraintRight_toLeftOf="@+id/list_recipebook_image_3"
            app:layout_constraintTop_toTopOf="@+id/list_recipebook_image_0"
            tools:src="@drawable/placeholder3"
            tools:visibility="gone"/>

        <ImageView
            android:id="@+id/list_recipebook_image_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_thumbnail_height_single"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toRightOf="@+id/list_recipebook_image_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/list_recipebook_image_0"
            tools:src="@drawable/placeholder4"
            tools:visibility="gone"/>


        <ImageView
            android:id="@+id/list_recipebook_edit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="@dimen/button_margin_small"
            android:src="@drawable/ic_menu_edit_grey"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/list_recipebook_gradient"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_thumbnail_gradient_height_single"
            android:src="@drawable/list_title_gradient"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/list_recipebook_image_0"
            tools:visibility="gone"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:id="@+id/list_recipebook_title"
            android:layout_marginLeft="@dimen/card_text_horizontal_margin"
            android:layout_marginStart="@dimen/card_text_horizontal_margin"
            android:layout_marginRight="@dimen/card_text_horizontal_margin"
            android:layout_marginEnd="@dimen/card_text_horizontal_margin"
            android:layout_marginTop="@dimen/card_vertical_padding"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/list_recipebook_gradient"
            app:layout_constraintVertical_bias="1.0"
            style="@style/titleText"
            tools:text="Christmas Dinner" />


        <TextView
            android:id="@+id/list_recipebook_description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_vertical_padding_small"
            app:layout_constraintLeft_toLeftOf="@+id/list_recipebook_title"
            app:layout_constraintRight_toRightOf="@+id/list_recipebook_title"
            app:layout_constraintTop_toBottomOf="@+id/list_recipebook_title"
            tools:text="This is from Christmas 2016. My first Christmas cooking dinner by myself!" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>