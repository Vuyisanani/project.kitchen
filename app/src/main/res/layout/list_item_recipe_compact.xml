<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_compact_vertical_separation"
    android:layout_marginRight="@dimen/card_horizontal_margin"
    android:layout_marginLeft="@dimen/card_horizontal_margin"
    android:layout_marginBottom="@dimen/card_compact_vertical_separation"
    app:cardCornerRadius="@dimen/card_corner_radius"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/list_recipe_touchpad"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="@dimen/card_text_horizontal_margin"
            android:src="@drawable/ic_touchpad_custom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/list_recipe_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginRight="@dimen/text_vertical_padding_small"
            android:layout_marginEnd="@dimen/text_vertical_padding_small"
            android:layout_marginTop="@dimen/text_vertical_padding_small"
            android:layout_marginBottom="@dimen/text_vertical_padding_small"
            app:layout_constraintLeft_toRightOf="@+id/list_recipe_touchpad"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/list_recipe_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/card_text_horizontal_margin"
            android:layout_marginRight="@dimen/card_text_horizontal_margin"
            style="@style/titleTextCompact"
            app:layout_constraintLeft_toRightOf="@id/list_recipe_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/list_recipe_image"
            tools:text="Fried Chicken" />

        <TextView
            android:id="@+id/list_recipe_description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="2"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="@id/list_recipe_title"
            app:layout_constraintRight_toRightOf="@id/list_recipe_title"
            app:layout_constraintTop_toBottomOf="@id/list_recipe_title"
            tools:text="Simple fried chicken from Kentucky. This is just some filler text to make it go to multiple lines" />

    </android.support.constraint.ConstraintLayout>



    <FrameLayout
        android:id="@+id/list_recipe_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/custom_card_overlay"/>

</android.support.v7.widget.CardView>